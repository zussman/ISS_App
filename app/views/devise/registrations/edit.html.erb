<h2>Edit <%= resource_name.to_s.humanize %> Settings</h2>
<div class="row">
  <div class="col-md-4">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <div class="row">
          <div class="col-xs-6">
            <%= f.input :first_name, required: true, autofocus: true %>
          </div> 
          <div class="col-xs-6">
            <%= f.input :last_name, required: true, autofocus: true %>
          </div>
        </div>
        <% resource.build_phone %>
              <%= f.fields_for :phone do |phone_form| %>
                <%= phone_form.input :phone_number, as: :tel, required: true, autofocus: true, class: "form-control" %>
              <% end %>
        <%= f.input :email, as: :email, required: true, autofocus: true %>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>

        <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
        <%= f.input :password_confirmation, required: false %>
        <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Update" %>
      </div>
    <% end %>
  </div>
</div>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
