<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" type="text/javascript"></script>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-3 col-md-offset-9">
      <div class="panel panel-default">
        <div class="table-responsive">
          <table class="table table-striped">
            <tbody>
              <tr>
                <td><strong>Time</strong></td>
                <td><%= @time %></td>
              </tr>
              <tr>
                <td><strong>Altitude</strong></td>
                <td><%= @altitude %> miles</td>
              </tr>
              <tr>
                <td><strong>Velocity</strong></td>
                <td><%= @velocity %> mph</td>
              </tr>
              <tr>
                <td><strong>Latitude</strong></td>
                <td><%= @latitude %></td>
              </tr>
              <tr>
                <td><strong>Longitude</strong></td>
                <td><%= @longitude %></td>
              </tr>
              <tr>
                <td colspan="2"><%= @solar_lat %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="map"></div>

<script type="text/javascript">
var map = handler = Gmaps.build('Google');
var latitude = <%= @latitude || 0 %>
var longitude = <%= @longitude || 0 %>
handler.buildMap({
  internal: {id: 'map'},
  provider: {
      zoom: 4,
      center: new google.maps.LatLng(latitude, longitude),
      mapTypeId: google.maps.MapTypeId.SATELLITE,
    }
  }, 
  function(){
  markers = handler.addMarkers([
    {
      "lat": latitude,
      "lng": longitude,
      "picture": {
        "url": "http://icon.softwaresea.com/32x32/5/394/1196603.891ea57c45143d46f175d87e8951cfb8.gif",
        "width":  36,
        "height": 36,
      },
      "infowindow": "hello!"
    }
  ]);
});
nite.init(map);
</script>